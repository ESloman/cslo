var string = "Hello, world!";
println(string.upper());
println(string.lower());
println(string.title());

println("alllowercase".upper());

var split = string.split(",");
for (var part in split) {
    println(part);
}

var unstripped = "  Hello, world!        ";
println(unstripped.strip());

println(string.startswith("Hello"));  # true
println(string.startswith("foo"));    # false
println(string.endswith("world!"));   # true
println(string.endswith("foo"));      # false

println(string.isalpha());         # false
println(string.isdigit());         # false
println(string.isalphanum());      # false
println("hello".isalpha());        # true
println("12345".isdigit());        # true
println("hello123".isalphanum());  # true

println(string.replace("world", "mum"));  # Hello, mum!
println(string.count("l"));               # 3
println(string.find("o"));                # 4
println(string.index("w"));               # 7
